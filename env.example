# TransactLab Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Configuration
ANALYTICS_ENABLED=true
API_KEY_SECRET=your_api_key_secret_here
API_VERSION=v1
BASE_URL=http://localhost:5000
NODE_ENV=development
PORT=5000

# Frontend Configuration
FRONTEND_URL=http://localhost:8080
CORS_ORIGIN=http://localhost:8080
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:8080

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?appName=Cluster0

# Redis Configuration
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://default:your_redis_password@your-redis-host.com:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your_session_secret_here_min_32_chars

# Encryption
ENCRYPTION_KEY=your_encryption_key_here_min_64_chars

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# React App Cloudinary (for frontend)
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
REACT_APP_CLOUDINARY_API_KEY=your_cloudinary_api_key
REACT_APP_CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration
# ============================================
# NO DOMAIN REQUIRED! Choose one option below:
# ============================================

# Option 0: EmailJS - EASIEST FOR PERSONAL PROJECTS! ⭐
# Free: 200 emails/month, then paid plans
# Setup: https://www.emailjs.com → 5 minutes
# USE_EMAILJS=true (set to false to disable)
# EMAILJS_PUBLIC_KEY=your_public_key_here
# EMAILJS_SERVICE_ID=your_service_id_here
# EMAILJS_TEMPLATE_ID=your_template_id_here
# EMAILJS_USER_ID=your_user_id_here (optional)

# Option 1: Brevo (Sendinblue) - RECOMMENDED for personal projects
# Free: 300 emails/day, 9,000/month
# Setup: https://www.brevo.com → SMTP & API → SMTP
# USE_SMTP=true
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-brevo-smtp-key
# EMAIL_FROM=your-email@example.com

# Option 2: SendGrid - Also great for personal projects
# Free: 100 emails/day forever
# Setup: https://sendgrid.com → Settings → API Keys
# USE_SMTP=true
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# EMAIL_FROM=your-verified-email@example.com

# Option 3: Mailtrap - FOR TESTING ONLY (emails don't actually send)
# Free: Unlimited (testing only)
# Setup: https://mailtrap.io → Create inbox → SMTP Settings
# USE_SMTP=true
# SMTP_HOST=sandbox.smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_USER=your-mailtrap-username
# SMTP_PASS=your-mailtrap-password
# EMAIL_FROM=test@example.com

# Option 4: Resend - Quick setup with testing domain
# Free: 3,000 emails/month
# Setup: https://resend.com → Get API key
# USE_SMTP=false
# RESEND_API_KEY=re_your_resend_api_key_here
# EMAIL_FROM=onboarding@resend.dev

# Option 5: Gmail SMTP (NOT RECOMMENDED - often fails)
# Requires App Password and may be blocked by cloud servers
# USE_SMTP=true
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your_gmail_app_password_here
# EMAIL_FROM=your-email@gmail.com

# ============================================
# CURRENT CONFIGURATION (uncomment one above)
# ============================================
USE_SMTP=true
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-brevo-smtp-key
EMAIL_FROM=your-email@example.com

# KYC Provider Configuration
KYC_PROVIDER_BASE_URL=https://kycplayground.vercel.app
KYC_PROVIDER_API_KEY=kyc_your_api_key_here
KYC_PROVIDER_RETURN_URL=http://localhost:8080/auth/kyc/callback
KYC_PROVIDER_WEBHOOK_URL=http://localhost:5000/api/v1/auth/webhooks/kyc

# Security
TRUSTED_IPS=your_trusted_ip_hash_here
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT=10000

# Features
FRAUD_DETECTION_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Backend Base URL (for production)
TL_BASE=https://your-backend-url.onrender.com
